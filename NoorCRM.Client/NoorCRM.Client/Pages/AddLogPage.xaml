<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             mc:Ignorable="d"
             x:Class="NoorCRM.Client.Pages.AddLogPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <material:MaterialButton x:Name="btnComment" 
                                 FontFamily="{StaticResource IRANSans}"
                                 Text="توضیح" 
                                 Clicked="btnComment_Clicked"/>
        <material:MaterialButton x:Name="btnSuccessful" 
                                 FontFamily="{StaticResource IRANSans}"
                                 Text="فاکتور" 
                                 Clicked="BtnSuccessful_Clicked"/>
        <material:MaterialButton x:Name="btnFailed" 
                                 FontFamily="{StaticResource IRANSans}"
                                 Text="عدم خرید" 
                                 Clicked="btnFailed_Clicked"/>
    </StackLayout>
</ContentPage>